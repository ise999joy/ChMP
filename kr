import matplotlib.pyplot as plt
import matplotlib.image as mpimg

# Create a simple activity diagram for an e-commerce site in UML using draw.io, save as PNG

# Set the image path
img_path = "/mnt/data/Ecommerce_Activity_Diagram.png"

# Display the image
img = mpimg.imread(img_path)
plt.figure(figsize=(10, 10))
plt.imshow(img)
plt.axis('off')  # Hide axes
plt.show()
